{
  "name": "@adhawk/feathers",
  "version": "1.0.0",
  "private": true,
  "author": "developers@tryadhawk.com",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": " lerna run prepare",
    "build": " lerna run build --concurrency 4",
    "test": "jest --colors --config ./config/jest.config.js --silent",
    "test:all": "npm run test:cjs && npm run test:umd && npm run test",
    "test:watch": "jest --colors --config ./config/jest.config.js --watch",
    "test:coverage": "jest --colors --config ./config/jest.config.js --verbose --coverage",
    "test:ci": "npm run test:coverage -- --ci --maxWorkers=2 --reporters=default --reporters=jest-junit --silent",
    "test:cjs": "npm run build && jest --colors --config ./config/jest.cjs.config.js",
    "test:cjs:ci": "jest --colors --config ./config/jest.cjs.config.js --ci --maxWorkers=2 --reporters=default --reporters=jest-junit --silent",
    "test:umd": "npm run build && jest --colors --config ./config/jest.umd.config.js",
    "test:umd:ci": "jest --colors --config ./config/jest.umd.config.js --ci --maxWorkers=2 --reporters=default --reporters=jest-junit --silent",
    "bundlesize": " lerna run build && bundlesize",
    "format": " prettier --config ./config/prettier.config.js --write \"./**/*.{js,jsx,ts*,md,graphql,json}\"",
    "deploy": " lerna publish",
    "clean": "rm -Rf ./node_modules ./meta &&  lerna exec -- npm run clean",
    "circleci": "/usr/bin/ruby -ryaml -e \"puts YAML.load_file('.circleci/config.yml').dig('workflows', 'verify', 'jobs')\" | xargs -o -L 1 circleci local execute --job"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/jest": "^25.1.0",
    "bundlesize": "0.18.0",
    "jest": "^25.1.0",
    "jest-environment-jsdom": "^25.1.0",
    "jest-environment-jsdom-global": "^1.2.1",
    "jest-junit": "10.0.0",
    "lerna": "3.20.2",
    "rollup": "1.31.1",
    "rollup-plugin-invariant": "^0.5.6",
    "rollup-plugin-terser": "5.2.0",
    "ts-jest": "^25.2.1",
    "typescript": "3.8.2"
  },
  "bundlesize": [
    {
      "name": "dom-dataset",
      "path": "./packages/dom-dataset/lib/dom-dataset.cjs.min.js",
      "maxSize": "221B"
    },
    {
      "name": "adwords-phone-tag",
      "path": "./packages/adwords-phone-tag/lib/adwords-phone-tag.cjs.min.js",
      "maxSize": "512B"
    },
    {
      "name": "error-tracking",
      "path": "./packages/error-tracking/lib/error-tracking.cjs.min.js",
      "maxSize": "16.38kB"
    }
  ]
}
